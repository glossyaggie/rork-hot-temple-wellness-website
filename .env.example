# Hot Temple App - Environment Configuration

# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# =============================================================================
# API Configuration
# =============================================================================
EXPO_PUBLIC_API_URL=https://your-api.com/api
EXPO_PUBLIC_ENVIRONMENT=development

# =============================================================================
# Database (Choose one)
# =============================================================================

# Supabase (Recommended)
EXPO_PUBLIC_SUPABASE_URL=https://xxx.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Firebase (Alternative)
# EXPO_PUBLIC_FIREBASE_API_KEY=your_api_key
# EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_auth_domain
# EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id

# =============================================================================
# Payment Processing
# =============================================================================
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_... # Backend only - DO NOT expose to client

# =============================================================================
# SMS Provider (Choose one)
# =============================================================================

# Twilio (Recommended for Australia)
EXPO_PUBLIC_TWILIO_ACCOUNT_SID=ACxxxxx
EXPO_PUBLIC_TWILIO_AUTH_TOKEN=xxxxx
EXPO_PUBLIC_TWILIO_FROM_NUMBER=+61400123456

# MessageMedia (Alternative)
# EXPO_PUBLIC_MESSAGEMEDIA_API_KEY=xxxxx
# EXPO_PUBLIC_MESSAGEMEDIA_API_SECRET=xxxxx

# Vonage (Alternative)
# EXPO_PUBLIC_VONAGE_API_KEY=xxxxx
# EXPO_PUBLIC_VONAGE_API_SECRET=xxxxx

# =============================================================================
# Push Notifications
# =============================================================================
EXPO_PUBLIC_FCM_SERVER_KEY=xxxxx
EXPO_PUBLIC_APNS_KEY_ID=xxxxx
EXPO_PUBLIC_APNS_TEAM_ID=xxxxx

# =============================================================================
# Development/Testing
# =============================================================================
EXPO_PUBLIC_USE_MOCK_DATA=true
EXPO_PUBLIC_ENABLE_DEBUG_LOGS=true
EXPO_PUBLIC_TEST_PHONE_NUMBER=+61400123456

# =============================================================================
# Production Settings
# =============================================================================
# EXPO_PUBLIC_SENTRY_DSN=https://xxx@sentry.io/xxx
# EXPO_PUBLIC_ANALYTICS_KEY=xxxxx